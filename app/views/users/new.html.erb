<% if @user.errors.any? %>
  <% @user.errors.full_messages do |msg| %>
    <% msg %>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.text_field :name, label: "Name: ", placeholder: "Please enter your name" %><br />
  <%= f.text_field :email, label: "Email: ", placeholder: "Please enter your email" %><br />
  <%= f.password_field :password, label: "Password: ", placeholder: "Please enter your password" %><br />
  <%= f.submit %>
<% end %>